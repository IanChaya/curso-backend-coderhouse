{{> navbar}}
<main>
    <div class="p-5 mt-3 rounded">
        <h2 class="text-primary mt-3 mb-3 text-center">Productos</h2>
        <div id="productos">
            {{#if hayProductos}}
            <table class="table bg-dark">
                <tr>
                    <th class="text-primary">Nombre</th>
                    <th class="text-primary">Descripci√≥n</th>
                    <th class="text-primary">Codigo</th>
                    <th class="text-primary">Precio</th>
                    <th class="text-primary">Stock</th>
                    <th class="text-primary">Imagen</th>
                </tr>
                {{#each productos}}
                <tr>
                    <td class="text-white">
                        {{this.title}}
                    </td>
                    <td class="text-white">
                        {{this.description}}
                    </td>
                    <td class="text-white">
                        {{this.code}}
                    </td>
                    <td class="text-white">
                        {{this.price}}
                    </td>
                    <td class="text-white">
                        {{this.stock}}
                    </td>                    
                    <td class="text-white"><img src="{{this.thumbnails}}" alt="imagen" height="64"></td>
                </tr>
                {{/each}}
            </table>
            {{else}}
            <p class="mt-3 mb-3 p-3">No se encontraron productos</p>
            {{/if}}
        </div>
    </div>
</main>

