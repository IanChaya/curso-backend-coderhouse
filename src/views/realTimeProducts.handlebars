<main>
    <div class="container p-5 mt-3">
        <h2 class="mt-3 mb-3 text-primary text-center">Agregar Productos</h2>
        <form class="row g-3">
            <div class="col-md-6">
                <label for="title" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="title">
            </div>
            <div class="col-md-6">
                <label for="description" class="form-label">Descripción</label>
                <input type="text" class="form-control" id="description">
            </div>
            <div class="col-md-6">
                <label for="code" class="form-label">Código</label>
                <input type="text" class="form-control" id="code">
            </div>
            <div class="col-md-6">
                <label for="price" class="form-label">Precio</label>
                <input type="number" class="form-control" id="price">
            </div>
            <div class="col-md-6">
                <label for="stock" class="form-label">Stock</label>
                <input type="number" class="form-control" id="stock">
            </div>
            <div class="col-md-6">
                <label for="category" class="form-label">Categoría</label>
                <input type="text" class="form-control" id="category">
            </div>
            <div class="col-12">
                <label for="url" class="form-label">URL Imagen</label>
                <input type="text" class="form-control" id="url">
            </div>
            <div class="col-12">
                <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" role="switch" id="status" checked>
                    <label class="form-check-label" for="status">Status</label>
                </div>
            </div>
        </form>
        <button class="btn btn-primary" id="enviar">Agregar Producto</button>
        <h2 class="text-primary mt-3 mb-3 text-center">Productos</h2>
        <div id="productos">
            {{#if hayProductos}}
            <table class="table bg-dark">
                <tr>
                    <th class="text-primary">Nombre</th>
                    <th class="text-primary">Precio</th>
                    <th class="text-primary">Imagen</th>
                    <th class="text-primary">Acciones</th>
                </tr>
                {{#each productos}}
                <tr>
                    <td class="text-white">
                        {{this.title}}
                    </td>
                    <td class="text-white">
                        {{this.price}}
                    </td>
                    <td class="text-white"><img src="{{this.thumbnails}}" alt="imagen" height="64"></td>
                    <td class="text-white">
                        <div role="button"  class="actions cambiar" id="xa{{this.id}}">
                            <img src="./images/edit.png" alt="edit" class="img-top" height="32"
                                id="xc{{this.id}}:{{this.title}}:{{this.price}}" data-bs-toggle="modal"
                                data-bs-target="#staticBackdrop">
                        </div>
                        <div role="button" class="actions borrar" id="xt{{this.id}}">
                            <img src="./images/delete.png" alt="delete" class="img-top" id="xd{{this.id}}" height="32">
                        </div>
                    </td>
                </tr>
                {{/each}}
            </table>
            {{else}}
            <p class="mt-3 mb-3 p-3 aviso">No se encontraron productos</p>
            {{/if}}
        </div>
    </div>
</main>

<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">Modificar datos del producto</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modal_id">
                ...
            </div>
            <div class="modal-footer" id="id_modal_footer">
                ...
            </div>
        </div>
    </div>
</div>

